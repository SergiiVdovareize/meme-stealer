#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Bump patch version before pushing (skips in CI)
if npm run bump-patch; then
  echo "Version bump succeeded â€” aborting push so new commit & tag can be pushed."
  echo "Run: git push --follow-tags"
  exit 1
else
  # If the script exited with 0 (e.g., CI skip), allow push to continue
  exit 0
fi
